# JoFotara Flutter App Environment Configuration

# API Configuration
API_BASE_URL=https://your-domain.com/api
API_TIMEOUT=30000

# App Configuration
APP_NAME=JoFotara Invoicing
APP_VERSION=1.0.0
DEFAULT_LANGUAGE=ar
DEFAULT_CURRENCY=JOD

# Printer Configuration
DEFAULT_PAPER_SIZE=80
BLUETOOTH_SCAN_TIMEOUT=10
NETWORK_SCAN_TIMEOUT=30
PRINTER_CONNECTION_TIMEOUT=5

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=info

# Security
ENABLE_SSL_PINNING=true
API_TOKEN_REFRESH_THRESHOLD=300

# Features
ENABLE_QR_SCANNING=true
ENABLE_PDF_GENERATION=true
ENABLE_BLUETOOTH_PRINTING=true
ENABLE_NETWORK_PRINTING=true
ENABLE_USB_PRINTING=true

# UI Configuration
THEME_MODE=light
RTL_SUPPORT=true
FONT_FAMILY=Cairo

# Networking
CONNECTION_TIMEOUT=10
READ_TIMEOUT=30
WRITE_TIMEOUT=30

# Storage
CACHE_SIZE_MB=50
MAX_INVOICE_CACHE=100
AUTO_BACKUP=true

# Notifications
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_SOUND=true

# Analytics (optional)
ENABLE_ANALYTICS=false
ANALYTICS_API_KEY=your_analytics_key

# Error Reporting (optional)
ENABLE_CRASH_REPORTING=false
CRASH_REPORTING_API_KEY=your_crash_reporting_key

# Testing
MOCK_API_RESPONSES=false
MOCK_PRINTER_RESPONSES=false
